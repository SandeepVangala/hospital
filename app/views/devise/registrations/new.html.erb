<%= javascript_include_tag "user"%>
<h2>User details</h2>

<div class="container" style="width: 600px;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
    <%= f.label "User type" %><br />
     <%= collection_select :role_id, 0, Role.all, :id, :title, {:include_blank => 'Select user type'}, {:class => 'form-control'}%>
    </div>
    <div id="doctor_fileds">
      <div class="field">
        <label for="user_name">Name</label><br />
        <input class="form-control" type="text" name="user[name]" id="user_name" /> 
      </div>
      <div class="field">
        <label for="user_address">Address</label><br />
        <input class="form-control" type="text" name="user[address]" id="user_address" /> 
      </div>
      <div class="field">
        <label for="user_city">City</label><br />
        <input class="form-control" type="text" name="user[city]" id="user_city" /> 
      </div>
      <div class="field">
        <label for="user_state">State</label><br />
        <input class="form-control" type="text" name="user[state]" id="user_state" /> 
      </div>
      <div class="field">
        <label for="user_zip">Zip</label><br />
        <input class="form-control" type="text" name="user[zip]" id="user_zip" /> 
      </div>
      <div class="field">
        <label for="user_School Received Degree From">School received degree from</label><br />
        <input class="form-control" type="text" name="user[degree_from]" id="user_degree_from" /> 
      </div>
      <div class="field">
        <label for="user_Years in Practice">Years in practice</label><br />
        <input class="form-control" type="text" name="user[years_practice]" id="user_years_practice" /> 
      </div>
    </div>

    <div class="field">
      <div class="field_with_errors"><label for="user_email">Email</label></div><br />
      <div class="field_with_errors"><input autofocus="autofocus" class="form-control" type="email" value="" name="user[email]" id="user_email" /></div> 
    </div>

    <div class="field">
      <div class="field_with_errors"><label for="user_password">Password</label></div>
      <em>(8 characters minimum)</em>
      <br />
      <div class="field_with_errors"><input autocomplete="off" class="form-control" type="password" name="user[password]" id="user_password" /></div>
    </div>

    <div class="field">
      <label for="user_password_confirmation">Password confirmation</label><br />
      <input autocomplete="off" class="form-control" type="password" name="user[password_confirmation]" id="user_password_confirmation" />
    </div>
    <div class="clearfix" style="margin-bottom: 15px;"></div>

    <div class="actions">
      <%= f.submit "Sign up", :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>